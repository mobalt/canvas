{
  "name": "CanvasTool",
  "version": "0.1.0",
  "description": "An extension to streamline some of Canvas' functionality.",
  "main": "index.js",
  "repository": "https://github.com/mobalt/canvas",
  "author": "Moises Baltazar <mail@moisesb.com>",
  "license": "MIT",
  "scripts": {
    "lint": "prettier-eslint 'src/**/*.{js,json,md}' --list-different --write",
    "lint:check": "prettier-eslint 'src/**/*.{js,json,md}' --list-different; exit 0",
    "build": "babel src --out-dir=dist",
    "dev": "babel-node ./src/bin/www",
    "test": "mocha"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "mocha": "^6.1.4",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.test.js",
        "options": {
          "semi": true
        }
      },
      {
        "files": "*.{yml,yaml,json}",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
