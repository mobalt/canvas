{
  "name": "CanvasTool",
  "version": "0.1.0",
  "description": "An extension to streamline some of Canvas' functionality.",
  "main": "index.js",
  "repository": "https://github.com/mobalt/canvas",
  "author": "Moises Baltazar <mail@moisesb.com>",
  "license": "MIT",
  "scripts": {
    "lint": "prettier-eslint 'src/**/*.*' --list-different --write",
    "lint:check": "prettier-eslint 'src/**/*.*' --list-different; exit 0",
    "test": "mocha"
  },
  "devDependencies": {
    "mocha": "^6.1.4",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.test.js",
        "options": {
          "semi": true
        }
      },
      {
        "files": "*.{yml,yaml,json}",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
